---
import FriendCard from '../components/FriendCard.astro';
import { friends } from '../content/config';
import Layout from '../layouts/Layout.astro';
import { randomSortArray } from '../utils/randomSortArray';
---

<Layout title="Friends">
  <div class="grid sm:grid-cols-3 gap-4 sm:gap-2">
    {randomSortArray(friends).map((friend) => <FriendCard friend={friend} />)}
  </div>
</Layout>
