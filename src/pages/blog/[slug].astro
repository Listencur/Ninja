---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

import Layout from '../../layouts/Layout.astro';

export const getStaticPaths = async () => {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
};

// eslint-disable-next-line @typescript-eslint/no-unused-vars
type Props = {
  post: CollectionEntry<'blog'>;
};
const { post } = Astro.props;
const { Content } = await post.render();

// TODO: get plain text from markdown
const description = post.body
  .substring(0, 150)
  .replaceAll('\n', ' ')
  .replaceAll('#', '')
  .replaceAll('```', '')
  .trim();
---

<Layout
  title={post.data.title + ' - Jsun Blog'}
  description={description}
  article={{ tags: post.data.tags, date: post.data.date.toISOString() }}
>
  <h1 class="text-center font-bold text-3xl">{post.data.title}</h1>
  <div class="text-center text-gray-400 mb-2 text-sm">
    {post.data.date.toDateString()} Â·
    {post.data.tags.join(' ')}
  </div>
  <article class="prose max-w-full">
    <Content />
  </article>
</Layout>
