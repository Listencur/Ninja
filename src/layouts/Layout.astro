---
import { SEO } from 'astro-seo';
import 'remixicon/fonts/remixicon.css';

import Link from '../components/Link.astro';

export interface Props {
  title?: string;
  description?: string;
  article?: { tags: string[]; date: string };
}

const { title, description = title, article } = Astro.props;

const SEO_IMAGE = 'https://github.com/jsun969.png';
const SEO_TWITTER_ACCOUNT = '@jsun969';
const SEO_SITE_NAME = 'Jsun Dot LOL';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - ${SEO_SITE_NAME}` : SEO_SITE_NAME}</title>
    <SEO
      description={description}
      openGraph={{
        basic: {
          title: title ?? SEO_SITE_NAME,
          type: 'website',
          image: SEO_IMAGE,
        },
        image: { alt: "Justin Sun's avatar" },
        optional: { description, siteName: SEO_SITE_NAME },
        article: {
          authors: article && ['Justin Sun'],
          publishedTime: article?.date,
          tags: article?.tags,
        },
      }}
      twitter={{
        title,
        description,
        image: SEO_IMAGE,
        site: SEO_TWITTER_ACCOUNT,
        creator: SEO_TWITTER_ACCOUNT,
      }}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="max-w-4xl mx-auto flex flex-col min-h-[100dvh] px-4">
    <header class="flex gap-4 py-4 sticky top-0 bg-white">
      <Link href="/" />
      <Link href="/blog" />
      <Link href="/about" />
      <Link href="/friends" class="grow" />
      <Link href="https://github.com/jsun969">
        <i class="ri-github-fill"></i>
      </Link>
      <Link href="https://twitter.com/jsun969">
        <i class="ri-twitter-fill"></i>
      </Link>
      <Link href="https://discord.gg/Q7xZVtF6pF">
        <i class="ri-discord-fill"></i>
      </Link>
      <Link href="">
        <i class="ri-rss-fill"></i>
      </Link>
    </header>
    <main class="grow">
      <slot />
    </main>
    <footer class="text-center text-gray-300 py-2">
      2020-{new Date().getFullYear()} &copy; Justin Sun
    </footer>
  </body>
</html>
